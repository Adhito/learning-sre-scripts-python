# Database Backup Tool - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_BACKUP_DB_TYPE=postgresql
DB_BACKUP_DB_HOST=localhost
DB_BACKUP_DB_PORT=5432
DB_BACKUP_DB_NAME=your_database
DB_BACKUP_DB_USER=your_username
DB_BACKUP_DB_PASSWORD=your_password

# ============================================================================
# QUERY CONFIGURATION
# ============================================================================
DB_BACKUP_TABLE_NAME=transactions
DB_BACKUP_DATE_COLUMN=created_at
DB_BACKUP_START_DATETIME=yesterday
DB_BACKUP_END_DATETIME=today
DB_BACKUP_CUSTOM_WHERE=
DB_BACKUP_CHUNK_SIZE=10000

# ============================================================================
# ENCRYPTION CONFIGURATION
# ============================================================================
DB_BACKUP_PGP_PASSWORD=your_secure_encryption_password
DB_BACKUP_GPG_HOME=
DB_BACKUP_GPG_CIPHER=AES256

# ============================================================================
# OBJECT STORAGE CONFIGURATION
# ============================================================================
# MinIO (local development)
DB_BACKUP_S3_ENDPOINT=http://localhost:9000
DB_BACKUP_S3_ACCESS_KEY=minioadmin
DB_BACKUP_S3_SECRET_KEY=minioadmin

# AWS S3 (production)
# DB_BACKUP_S3_ENDPOINT=
# DB_BACKUP_S3_ACCESS_KEY=AKIAIOSFODNN7EXAMPLE
# DB_BACKUP_S3_SECRET_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

DB_BACKUP_S3_BUCKET=db-backups
DB_BACKUP_S3_REGION=us-east-1
DB_BACKUP_S3_PREFIX=backups/{table}/{date}/

# ============================================================================
# OUTPUT CONFIGURATION
# ============================================================================
DB_BACKUP_TEMP_DIR=./temp_backups
DB_BACKUP_KEEP_LOCAL=false
DB_BACKUP_FILENAME_PATTERN={table}_{start}_{end}

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
DB_BACKUP_LOG_LEVEL=INFO
